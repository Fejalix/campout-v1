{{ 'component-list-product-slider.css' | asset_url | stylesheet_tag }}
{% comment %} {{ 'component-card.css' | asset_url | stylesheet_tag }} {% endcomment %}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
<div class="section-lps">
    <div class="page-width container-lps">
        <a href="{{ section.settings.collection.url }}"
            class="link-collection-lps"
            aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title }}"
          >
        <h2 class="tilte">{{ section.settings.collection.title | capitalize}}</h2>
        <div class="swiper-lps">
            <div class="swiper-wrapper">
                
                        {% comment %} Nombre de produit dans la collection : {% endcomment %}
                    {% comment %} {{ section.settings.collection.all_products_count }} {% endcomment %} 
                    {%for product in section.settings.collection.products %}
                    
                    <div class="swiper-slide">                       
                        {% render 'card-product-custom',
                        card_product: product,
                        media_aspect_ratio: section.settings.image_ratio,
                        show_vendor: section.settings.show_vendor,
                        show_quick_add: section.settings.enable_quick_add,
                        section_id: section.id
                        %}          
                    </div>
                    {%endfor%}
                
            </div>
        </div>
      
    </div>
</div>{% javascript %}
window.addEventListener('load', function () {
  const swiper = new Swiper('.swiper-lps', {
    loop: false,
    slidesPerView: 3.33,
    spaceBetween: 30,
    breakpoints: {
    // when window width is >= 320px
      320: {
        slidesPerView: 0.95,
        spaceBetween: 10,
      },
      // when window width is >= 380px
      380: {
        slidesPerView: 1.10,
        spaceBetween: 20,
      },

      // when window width is >= 480px
      480: {
        slidesPerView: 1.5,
        spaceBetween: 30,
      },

      // when window width is >= 640px
      640: {
        slidesPerView: 2.0,
      },
      920: {
        slidesPerView: 2.5,
      },

      // when window width is >= 1024
      1024: {
        slidesPerView: 3.0
      },

      // when window width is >= 1280
      1280: {
        slidesPerView: 3.33,
      },
    },
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "List product",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Titre de la liste (Top Vente)",
      "label": "Titre"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.featured-collection.settings.description.label"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": false,
      "label": "t:sections.featured-collection.settings.enable_quick_buy.label"
    }
  ],
  "presets": [
    {
      "name": "List product slider"
    }
  ]
}
{% endschema %}
